

<div class='dashboard'>

  <% if current_user %>
  <div class='dashboard-element'>

    <div class='dashboard-header'>
      <h2>My Tools</h2>
      <div class="db-button-wrap">
      <%= link_to new_item_path, class: 'button-icon' do %>
        <i class="fas fa-plus"></i>
        <% end %>
      </div>
    </div>

      <ul class='dashboard-list'>
        <% @my_tools.each do |item| %>
          <li>
            <%= cl_image_tag item.photo.key, class:"db-image" %>
            <div class="db-el-container">
              <h5><%= link_to "#{item.name}", item_path(item) %> </h5>
              <p><%= item.price %> kr / day</p>
              <p><%= item.available ? "available" : "unavailable" %></p>
              <div class="db-button-wrap">
                <%= link_to item_path(item), class: 'button-icon',
                    method: :delete,
                    data: { confirm: "Are you sure?" } do %>
                    <i class="far fa-trash-alt"></i>
                    <% end %>
                    <%= link_to edit_item_path(item), class: 'button-icon' do %>
                    <i class="fas fa-edit"></i>
                    <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
  </div>
    <div class='dashboard-element'>

      <div class='dashboard-header'>
         <h2>Tools I am renting</h2>
      </div>

      <ul class='dashboard-list'>
        <%  @my_rentals.each do |rental| %>
          <li>
            <%= cl_image_tag rental.item.photo.key, class:"show-image" %>
            <div class="db-el-container">
              <h5><%= link_to "#{rental.item.name }", item_path(rental.item) %> </h5>
              <p><%= rental.item.price %> kr / day </p>
              <p class="show-owner"><%= link_to "#{rental.item.user.first_name}", items_path  %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
   <% else %>
   <div class ="dashboard-element">
      <h2>Log in to see your Dashboard</h2>
    <% end  %>
   </div>
</div>




