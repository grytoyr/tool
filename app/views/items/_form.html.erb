     <%= simple_form_for item do |f| %>
       <% if @item.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :category, collection: Item::CATEGORIES, selected: Item::CATEGORIES.first %>
        <%= f.input :photo, as: :file %>
        <div class="form-button-wrap">
          <%= f.button :submit, class:"rent-button" %>
          <div class="button-space-form">&nbsp;</div>
           <%= link_to "Back to Tools List", items_path, class:"rent-button"  %>
        </div>
      <% end %>



