<h1 class="px-4 pt-4">Search results</h1>

<!-- <div class="container w-100"> -->
  <div class="row p-4">
    <div class="col-sm-12 col-md-8">
     <% @items.each do |item| %>
      <div class="pb-4">
        <%= render partial:'shared/index_shop_card', locals: {item: item}%>
      </div>
    <% end %>
    </div>
    <div class="col-sm-12 col-md-4 p-0 shadow-sm">
      <div class="sticky-top">
      <div
        id="map"
        style="width: 100%;
        height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>
    </div>
  </div>
