    <div class="col-md-7">
     <% @items.each do |item| %>
      <div class="pb-4">
        <%= render partial:'shared/index_shop_card', locals: {item: item}%>
      </div>
    <% end %>
    </div>
    <div class="col-md-5">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
