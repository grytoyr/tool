<div class="form-background">

  <div class="container-lg">
    <div class="row d-flex justify-content-center">
      <div class="col-6 form-wrap">

      <h1>Log in</h1>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>


        <div class="form-button-wrap">

          <%= f.button :submit, "Log in", class:"rent-button" %>
          <div class="button-space-form">&nbsp;</div>
          <%= link_to "Sign up", new_registration_path(resource_name), class:"rent-button" %>
          <div class="button-space-form">&nbsp;</div>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"rent-button" %>

        </div>

        </div>
      <% end %>



      </div>
    </div>
  </div>
</div>
