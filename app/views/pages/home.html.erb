
<div class="container-lg pt-5">
  <div class="row">
    <div class="col-12">
      <div class="home-banner">
        <div class="banner-title">
          <h1>Stop buying expensive tools you rarely use. Rent it.</h1>
        </div>
        <form action="#" method="POST" class="banner-form">
          <input type="text" id="banner-input" placeholder="What are you looking for?">
          <input type="submit" class="banner-button" value="Search">
        </form>
        <%= link_to 'Browse tools', items_path, class:"rent-button" %>
      </div>
    </div>
  </div>
</div>

<div class="container-lg pt-5">

  <div class="section-title">
    <h2>Featured categories</h2>
  </div>

  <div class="row col-12">
    <div class="col-4">
      <div class="category-card saw">
        <h2>Saws</h2>
      </div>
    </div>

    <div class="col-4">
      <div class="category-card garden">
        <h2>Garden</h2>
      </div>
    </div>

    <div class="col-4">
      <div class="category-card drill">
        <h2>Drills</h2>
      </div>
    </div>

  </div>

</div>


<div class="container-lg pt-5">

  <div class="section-title col-12">
    <h2>Popular rentet items</h2>
  </div>

  <div class="row col-12">
    <div class="container-lg pt-4 ">
      <div class="row">
         <% @items.last(8).each do |item| %>
          <div class="col-3 pb-4">
            <%= render partial:'shared/shop_card', locals: {item: item}%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>




